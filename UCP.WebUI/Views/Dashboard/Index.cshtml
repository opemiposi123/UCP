@model UCP.Application.Dto.CountDto
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
}

<section class="content">

    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.MembersCounts</h3>
                        <p>Members</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-users"></i>
                    </div>
                    <a href="@Url.Action("ViewMembers","Member")" class="small-box-footer">
                        View Members->
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">

                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.LoansCount</h3>

                        <p>Loan</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="@Url.Action("ViewLoan","Loan")" class="small-box-footer">
                        View Loans
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.ApplyForLoansCount</h3>

                        <p>ApplyForLoan</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="@Url.Action("ApplyForLoan","ApplyForLoan")" class="small-box-footer">View ApplyForLoan<i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>

        <div class="row">
            <section class="col-lg-12">
                <div class="card">
                </div>
            </section>
        </div>

    </div>

</section>

