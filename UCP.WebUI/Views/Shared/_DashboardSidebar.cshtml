@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Razor
@using UCP.Domain.Entity
@inject SignInManager<Member> SignInManager
@inject UserManager<Member> UserManager
<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
	<!-- Brand Logo -->
	<a asp-controller="Dashboard" asp-action="Index" class="brand-link">
		<img src="~/assets/dist/img/AdminLTELogo.png" alt="UCPLogo" class="brand-image img-circle elevation-3" style="opacity: .8">
		<span class="brand-text font-weight-light">UCP</span>
	</a>

	<!-- Sidebar -->
	<div class="sidebar">
		<!-- Sidebar user panel (optional) -->
		<div class="user-panel mt-3 pb-3 mb-3 d-flex">
			<div class="image">
				<img src="~/assets/dist/img/maan_avatar.jpg" class="img-circle elevation-2" alt="User Image">
			</div>
			<div class="info">
				<a href="#" class="d-block">@User.Identity.Name!</a>
			</div>
		</div>

		<!-- Sidebar Menu -->
		<nav class="mt-2">
			<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

				<li class="nav-item">
					<a asp-controller="Dashboard" asp-action="Index" class="nav-link active">
						<i class="nav-icon fas fa-tachometer-alt"></i>
						<p>
							Dashboard
						</p>
					</a>
				</li>

				<li class="nav-header">Manage Members</li>
				<li class="nav-item">
					<a href="#"class="nav-link">
						<i class="nav-icon fas fa-users"></i>
						<p>
							Members
							<i class="right fas fa-angle-left"></i>
						</p>
					</a>
					<ul class="nav nav-treeview">
						<li class="nav-item">
							<a href="@Url.Action("CreateMember","Member")" class="nav-link">
								<i class="far fa-circle nav-icon"></i>
								<p>Create Member</p>
							</a>
						</li>
						<li class="nav-item">
							<a href="@Url.Action("ViewMembers","Member")" class="nav-link">
								<i class="far fa-circle nav-icon"></i>
								<p>View Members</p>
							</a>
						</li>
					</ul>
				</li>

				<li class="nav-header">Manage Loans</li>
				<li class="nav-item">
					<a href="#" class="nav-link">
						<i class="nav-icon fas fa-users"></i>
						<p>
							Loan
							<i class="right fas fa-angle-left"></i>
						</p>
					</a>
					<ul class="nav nav-treeview">
						<li class="nav-item">

							<a href="@Url.Action("CreateLoan","Loan")" class="nav-link">
								<i class="far fa-circle nav-icon"></i>
								<p>Create loans</p>
							</a>
							<a href="@Url.Action("ViewLoan","Loan")" class="nav-link">
								<i class="far fa-circle nav-icon"></i>
								<p>View loans</p>
							</a>
						</li>
					</ul>
				</li>



				<li class="nav-header">Customer Service</li>
				<li class="nav-item">
					<a href="#" class="nav-link">
						<i class="nav-icon fas fa-users"></i>
						<p>
							Apply For Loan
							<i class="right fas fa-angle-left"></i>
						</p>
					</a>
					<ul class="nav nav-treeview">
						<li class="nav-item">
							<a href="@Url.Action("ApplyForLoan","ApplyForLoan")" class="nav-link">
								<i class="far fa-circle nav-icon"></i>
								<p>Apply For Loan</p>
							</a>
						</li>
@*						<li class="nav-item">
							<a href="@Url.Action("ViewProducts","Product")" class="nav-link">
								<i class="far fa-circle nav-icon"></i>
								<p>View Products</p>
							</a>
						</li>*@
					</ul>
				</li>

				<li class="nav-item">
					<a href="@Url.Action("Logout","UserAuth")" class="nav-link">
						<i class="nav-icon fas fa-power-off"></i>
						<p>Logout</p>
					</a>
				</li>
			</ul>
		</nav>
	</div>

</aside>