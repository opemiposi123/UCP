@model UCP.Application.Dto.MemberDto
@{
	ViewData["Title"] = "Create Member";
	Layout = "_DashboardLayout";
}
@section Styles{
	<link rel="stylesheet" href="~/assets/plugins/select2/css/select2.min.css">
	<link rel="stylesheet" href="~/assets/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
}

	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-6">
					<form asp-action="CreateMember">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<input type="hidden" asp-for="Id" />

						<div class="form-row">
							<div class="col">
								<label asp-for="UserName" class="control-label"></label>
								<input asp-for="UserName" class="form-control" required />
								<span asp-validation-for="UserName" class="text-danger"></span>
							</div>
							<div class="col">
								<label asp-for="Surname" class="control-label"></label>
								<input asp-for="Surname" class="form-control" required />
								<span asp-validation-for="Surname" class="text-danger"></span>
							</div>
						</div>

						<div class="form-row">
							<div class="col">
								<label asp-for="Gender" class="control-label"></label>
								<select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<UCP.Domain.Enum.Gender>()"></select>
								<span asp-validation-for="Gender" class="text-danger"></span>
							</div>
							<div class="col">
								<label asp-for="DateOfBirth" class="control-label"></label>
								<input asp-for="DateOfBirth" class="form-control" required />
								<span asp-validation-for="DateOfBirth" class="text-danger"></span>
							</div>
						</div>

						<div class="form-row">
							<div class="col">
								<label asp-for="Email" class="control-label"></label>
								<input asp-for="Email" class="form-control" required />
								<span asp-validation-for="Email" class="text-danger"></span>
							</div>
							<div class="col">
								<label asp-for="AccountNumber" class="control-label"></label>
								<input asp-for="AccountNumber" class="form-control" required />
								<span asp-validation-for="AccountNumber" class="text-danger"></span>
							</div>

						</div>

					


						<div class="form-row">
							<div class="col">
								<div class="col">
									<label asp-for="OtherName" class="control-label"></label>
									<input asp-for="OtherName" class="form-control" required />
									<span asp-validation-for="OtherName" class="text-danger"></span>
								</div>
									<div class="col">
									<label asp-for="PhoneNumber" class="control-label"></label>
									<input type="PhoneNumber" asp-for="PhoneNumber" class="form-control" required />
									<span asp-validation-for="PhoneNumber" class="text-danger"></span>
								</div>
							</div>
						</div>

						<div class="form-row">
							<div class="col">
								<div class="col">
									<label asp-for="Password" class="control-label"></label>
									<input type="password" asp-for="Password" class="form-control" required />
									<span asp-validation-for="Password" class="text-danger"></span>
								</div>
									<div class="col">
									<label asp-for="PasswordConfirm" class="control-label"></label>
									<input type="password" asp-for="PasswordConfirm" class="form-control" required />
									<span asp-validation-for="PasswordConfirm" class="text-danger"></span>
								</div>
							</div>
						</div>

							<br />
							<div class="form-row">
								<div class="kt-form__actions">
									<button class="btn btn-success"
										type="submit">
										Create
									</button>
									&nbsp;
									<a class="btn btn-primary" asp-action="ViewMember">Return to Member List</a>
								</div>
							</div>
					</form>
				</div>
			</div>

		</div>
	</section>
	@section Scripts
	{
	<script src="~/assets/plugins/select2/js/select2.full.js"></script>
	<script src="~/yassets/assets/js/pages/create-new-staff/submit-form.js"></script>
	<script src="~/yassets/assets/initialize-select-lists.js"></script>

	<script>
		setupCategorySelect('@Url.Action("LoadAllCategories", "SelectListUtility")');
		setupParameterSelect('@Url.Action("LoadAllParameters", "SelectListUtility")');
		setupQualityControlSelect('@Url.Action("LoadAllQualityControls", "SelectListUtility")');
	</script>
}